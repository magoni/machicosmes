<%= form_for :fragment, url: fragment_path(@fragment), method: :patch do |f| %>
  <% if @fragment.errors.any? %>
    <div id="error_explanation">
      <strong><%= pluralize(@fragment.errors.count, "error") %></strong>
      <ul>
        <% @fragment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <label for="fragment_title">title</label><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <label for="fragment_text">text</label><br>
    <%= f.text_area :text, size: '60x15' %>
  </p>

  <p>
  <input type="submit" name="commit" value="save">
  </p>
<% end %>
